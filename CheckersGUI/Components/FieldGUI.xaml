<UserControl x:Class="CheckersGUI.Components.FieldGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CheckersGUI.Components"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="80">
    <Border x:Name="border" d:Background="White" BorderBrush="Black" BorderThickness="2" Width="80" Height="80">
        <Border d:Background="Black" Background="{Binding PieceColor}" Width="40" Height="40" CornerRadius="20">
            <Button Background="Transparent" BorderBrush="Transparent" Click="Button_Click"/>
        </Border>
    </Border>
</UserControl>
